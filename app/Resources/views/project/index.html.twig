{% extends 'backend.html.twig' %}

{% block title %}GenTran Project List{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Projects</h1>
        <div class="button-box">
            <button type="button" data-toggle="modal" data-target="#createProjectModal" class="btn btn-success">New Project</button>
        </div>

        <div class="row display-flex-wrap auto-clear">
            {% for project in projects %}
            <div class="col-md-3 col-sm-6 col-xs-12 m-b-20">
                <div class="project-box">
                    <div class="btn-group btn-option">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="glyphicon glyphicon-option-vertical"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('stringkey_index') }}">Add Key String</a></li>
                            <li><a data-toggle="modal" data-target="#editProjectModal">Edit</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a data-toggle="modal" data-target="#deleteProjectModal">Delete</a></li>
                        </ul>
                    </div>

                    <h2 class="project-title"><a href="{{ path('project_show', { 'id': project.id }) }}">{{ project.projectName }}</a></h2>
                    <p class="project-description">{{ project.description|length > 70 ? project.description[:70] ~ '...' : project.description }}</p>
                    <p class="datetime">Created Date: {% if project.createdDate %}{{ project.createdDate|date('Y-m-d') }}{% endif %}</p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>


