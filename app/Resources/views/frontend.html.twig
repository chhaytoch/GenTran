{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block bodyStyle %}{% endblock %}

{% block nav %}
<div id="wrapper">
    <!-- Sidebar -->
    <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
            <li class="sidebar-brand">
                <a href="#">
                    <span class="glyphicon glyphicon-user"></span> {{ app.user.username }}
                </a>
            </li>
            <li>
                <a href="{{ path('project_index') }}">
                    <span class="glyphicon glyphicon-blackboard"></span> Project
                </a>
            </li>
            {% if app.request.attributes.get('_route') != 'project_index' %}
                <li>
                    <a href="#">
                        <span class="glyphicon glyphicon-picture"></span>
                        Project Context
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span class="glyphicon glyphicon-list-alt"></span>
                        Key String
                    </a>
                </li>
            {% endif %}
            <li>
               <a href="#">
                   <span class="glyphicon glyphicon-cog"></span>
                   Setting
               </a>
            </li>
            <li>
                <a href="{{ path('fos_user_security_logout') }}">
                    <span class="glyphicon glyphicon-lock"></span>
                    Logout
                </a>
            </li>
        </ul>
    </div>
    <!-- /#sidebar-wrapper -->
{% endblock %}

{% block body %}{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}