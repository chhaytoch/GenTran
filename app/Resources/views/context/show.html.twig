{% extends 'base.html.twig' %}

{% block body %}
    <h1>Context</h1>

    <table>
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ context.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ context.description }}</td>
            </tr>
            <tr>
                <th>Imagepath</th>
                <td>{{ context.imagePath }}</td>
            </tr>
            <tr>
                <th>Createduser</th>
                <td>{{ context.createdUser }}</td>
            </tr>
            <tr>
                <th>Modifieduser</th>
                <td>{{ context.modifiedUser }}</td>
            </tr>
            <tr>
                <th>Createddate</th>
                <td>{% if context.createdDate %}{{ context.createdDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Modifieddate</th>
                <td>{% if context.modifiedDate %}{{ context.modifiedDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ context.id }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{% if context.active %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Deleted</th>
                <td>{% if context.deleted %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('context_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('context_edit', { 'id': context.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
