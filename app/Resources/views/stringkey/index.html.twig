{% extends 'frontend.html.twig' %}

{% block body %}
    <div class="container">
        <h1>String Key Management</h1>

        <div class="row">
            <div class="col-md-3 col-sm-3">
                <div>
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div class="m-t-20 text-right">
                        <input type="submit" value="Add Key" class="btn btn-success" />
                    </div>
                    {{ form_end(form) }}
                </div>

                <div class="keystring-box">
                    <p class="keystring-title">Key String List</p>
                    <ul class="keystring-list">
                        {% for stringKey in stringKeys %}
                        <li data-url="{{ path('stringkey_context', {'stringKey': stringKey.id }) }}">
                            <a href="#" class="keystring-link">
                                {{ stringKey.keyLabel }}
                            </a>
                            <a href="#" class="text-primary stringkey-edit">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </a>
                            <a href="#" class="text-danger stringkey-delete">
                                <span class="glyphicon glyphicon-trash"></span>
                            </a>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="col-md-9 col-sm-9">
                <div class="col-md-6">
                    {% for language in languages %}
                        <label for="lb{{ language.langName }}">{{ language.langName }}</label>
                        <input type="text" class="form-control" id="txt{{ language.langName }}" name="lang[]" required="required" autofocus />
                    {% endfor %}
                    <div class="text-right m-t-20">
                        <input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="Save" />
                    </div>

                    {#<form action="" method="post">#}

                        {#<label for="username">Username or Email</label>#}
                        {#<input type="text" class="form-control" id="username" name="_username" required="required" autofocus />#}

                        {#<label for="password">Password</label>#}
                        {#<input type="password" class="form-control" id="password" name="_password" required="required" />#}

                        {#<input type="checkbox" id="remember_me" name="_remember_me" value="on" />#}
                        {#<label for="remember_me">Remember Me</label>#}

                        {#<input type="submit" class="btn btn-default btn-login" id="_submit" name="_submit" value="Login" />#}
                    {#</form>#}
                </div>
                <div class="col-md-6">
                    <img src="" alt=""  id="context-preview" width="400">
                </div>
            </div>
        </div>
    </div>
{% endblock %}
